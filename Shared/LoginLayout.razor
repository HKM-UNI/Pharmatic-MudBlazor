@using MudBlazor.Services
@inherits LayoutComponentBase
<link rel="stylesheet" href="/css/background.css?version=5" />

<MudThemeProvider Theme="selectedTheme" />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex align-center" Style="height: 100vh;">
    <MudGrid Spacing="0" Class="align-self-center"
             Style="border: 10px solid rgba(231, 255, 255, 0.6); box-sizing: border-box; border-radius: 10px; height:100%; max-height:550px;">

        <MudBreakpointProvider>
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudItem md="6" Class="overflow-hidden">
                    <MudImage Src="/img/drug_bkg.jpg" Style="width: 100%; height: 100%; object-fit: none; object-position: 15% 50%" />
                </MudItem>
            </MudHidden>
        </MudBreakpointProvider>

        <MudItem md="6" sm="12" xs="12">
            @Body
        </MudItem>

    </MudGrid>

</MudContainer>

@code {
    private MudTheme selectedTheme = CustomThemes.PharmaticTheme;
}
