@page "/metadata"
@using Pharmatic.Services;
@layout MainLayout
@inject NavigationManager _navigationManager
@inject SharedData _data

<MudPaper Class="mx-2" Style="height:100%; overflow-y:auto; overflow-x: hidden; background-color:white;">
    <MudGrid Justify="Justify.SpaceAround" Spacing="5" Class="pa-16">
        <MudItem lg="4" md="6" xs="12">
                <MudCard Class="mb-5" Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToCat">
                            <MudIcon Icon="@CustomIcons.HashtagDown" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center" >Categorías</MudText>
                    </MudCardContent>
                </MudCard>
        </MudItem>

        <MudItem lg="4" md="6" xs="12">
                <MudCard Class="" Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToSubCat">
                            <MudIcon Icon="@CustomIcons.HashtagDown" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center">Sub Categorías</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

        <MudItem lg="4" md="6" xs="12">
                <MudCard Class="mb-5" Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToUMedidas">
                            <MudIcon Icon="@CustomIcons.Filter" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center">Unidades de medida</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

        <MudItem lg="4" md="6" xs="12">
                <MudCard Class="" Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToTags">
                            <MudIcon Icon="@CustomIcons.Tag2" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center">Tags</MudText>
                    </MudCardContent>
                    
                </MudCard>
            </MudItem>

        <MudItem lg="4" md="6" xs="12">
                <MudCard Class="mb-5" Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToVDAdministracion">
                            <MudIcon Icon="@CustomIcons.Milk" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center">Vía de administración</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>

        <MudItem lg="4" md="6" xs="12">
                <MudCard Elevation="3" Style="background-color: #F5F5F5; height: 280px;">
                    <MudCardHeader Class="pb-0 mb-0" Style="display: flex; justify-content: center;">
                        <MudIconButton OnClick="NavToDosis">
                            <MudIcon Icon="@CustomIcons.Edit" Style="width:165px; height:165px;" />
                        </MudIconButton>
                    </MudCardHeader>
                    <MudCardContent Class="pt-0 mt-0">
                        <MudText Typo="Typo.h6" Align="Align.Center">Tipo de dosis</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
    </MudGrid>
</MudPaper>

@code {
    private void NavToCat() { _navigationManager.NavigateTo("/metadata/categorias"); }
    private void NavToSubCat() { _navigationManager.NavigateTo("/metadata/subcategorias"); }
    private void NavToUMedidas() { _navigationManager.NavigateTo("/metadata/umedidas"); }
    private void NavToTags() { _navigationManager.NavigateTo("/metadata/tags"); }
    private void NavToVDAdministracion() { _navigationManager.NavigateTo("/metadata/vias"); }
    private void NavToDosis() { _navigationManager.NavigateTo("/metadata/dosis"); }

    protected override async Task OnInitializedAsync()
    {

        _data.Items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/dashboard", icon: Icons.Material.Filled.Home),
            new BreadcrumbItem("Metadata", href: null, disabled: true)
        };
    }
}
        
