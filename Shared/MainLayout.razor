@inherits LayoutComponentBase
@inject NavigationManager _navigationManager
@using static CustomIcons
<link rel="stylesheet" href="/css/background.css" />

<MudThemeProvider Theme="selectedTheme" />
<MudSnackbarProvider />

<MudLayout>
        <MudAppBar Elevation="0" >
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudTextField @bind-Value="@search_text" Placeholder="Buscar" Variant="Variant.Outlined" Adornment="Adornment.Start"
                          AdornmentIcon="@CustomIcons.Search" Margin="Margin.Dense" />

            <MudIconButton Icon="@CustomIcons.Notification" Color="Color.Inherit" OnClick="CerrarSesion" Size="Size.Large" />

            <MudSpacer />

            <MudIconButton Icon="@CustomIcons.Logout" Color="Color.Inherit" OnClick="CerrarSesion" Size="Size.Large" />

            <MudCard Style="background: inherit;" Elevation="0">

                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Color="Color.Secondary" Size="Size.Large">R</MudAvatar>
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.body1">Ricardo Montenegro</MudText>
                        <MudText Typo="Typo.body2">Tonny.n1105@gmail.com</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
            </MudCard>

            <MudIconButton Icon="@CustomIcons.Down" Color="Color.Inherit" OnClick="CerrarSesion" Size="Size.Large" />
        </MudAppBar>

        <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Mini" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Md">
            <MudImage Width="@logo_w" Src="@logo" ObjectFit="ObjectFit.Contain" />
            <NavMenu />
        </MudDrawer>

    <MudMainContent Style="background-color: background: red;">
            @Body
    </MudMainContent>
</MudLayout>
    


@code {
    private MudTheme selectedTheme = CustomThemes.PharmaticThemeRounded;
    string logo = "/img/Pharmatic 2.png";
    bool _drawerOpen = false;
    bool loading = false;
    string search_text;

    int? logo_w = 56;

    void DrawerToggle()
    {
        if (_drawerOpen) {
            logo = "/img/Pharmatic 2.png";
            logo_w = 56;
        }
        else {
            logo = "/img/Pharmatic 1.png";
            logo_w = 240;
        }
        _drawerOpen = !_drawerOpen;
    }

    private void CerrarSesion()
    {
        _navigationManager.NavigateTo("/");

    }

}