@inherits LayoutComponentBase
<link rel="stylesheet" href="/css/background.css" />

<MudThemeProvider Theme="selectedTheme"/>
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex align-center" Style="height: 100vh;">
    <MudGrid Spacing="0" Justify="Justify.Center"
             Style="border: 10px solid rgba(231, 255, 255, 0.6); box-sizing: border-box; border-radius: 10px;">
        <MudItem xs="7">
            <MudCard Class="pillbkg">
            </MudCard>
        </MudItem>
        <MudItem xs="5">
            <MudPaper Class="pa-12" Width="100%" Height="100%">
                <MudImage Fluid="false" Src="/img/Pharmatic.png" Width="320"/>
                    @Body
            </MudPaper>
        </MudItem>
    </MudGrid>
    
</MudContainer>


@code {
    private MudTheme selectedTheme = CustomThemes.PharmaticTheme;
}
